{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2022"
    ],
    "jsx": "preserve",
    "jsxImportSource": "react",
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next-types.d.ts",
    "out/types/**/*.ts",
    "src/__tests__/jest-setup.d.ts",
    "src/types/global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test-pages-backup",
    "e2e",
    "supabase/functions",
    ".next/types",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
